<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/spinner_background_pressed" />
            <stroke
                android:width="2dp"
                android:color="@color/spinner_stroke_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/spinner_background_default" />
            <stroke
                android:width="1dp"
                android:color="@color/spinner_stroke_default" />
        </shape>
    </item>
</selector>